<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint:Constraint-Layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android.support.constraint="http://schemas.android.com/tools">

<ImageView
    android:id="@+id/imgPhoto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/text_margin_standard"
    android:layout_marginTop="@dimen/text_margin_standard"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="@dimen/text_margin_standard"
    app:srcCompat="@mipmap/ic_launcher_round"
    android:contentDescription="@string/img_photo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_standard"
        android:layout_marginTop="@dimen/text_margin_standard"
        android:text="@string/tv_title"
        android:textSize="@dimen/title_large"
        app:layout_constraintStart_toStartOf="@+id/imgPhoto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/text_margin_standard" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_standard"
        android:layout_marginTop="@dimen/text_margin_standard"
        android:text="@string/tv_description"
        android:textSize="@dimen/text_description"
        app:layout_constraintEnd_toEndOf="@+id/imgPhoto"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        android:layout_marginLeft="@dimen/text_margin_standard" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_standard"
        android:layout_marginTop="@dimen/text_margin_standard"
        android:text="@string/tv_price"
        android:textSize="@dimen/text_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        android:layout_marginLeft="@dimen/text_margin_standard"
        android:textColor="@color/colorAccent"/>
</android.support.constraint:Constraint-Layout>
